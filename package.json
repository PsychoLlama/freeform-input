{
  "version": "0.2.0",
  "name": "freeform-input",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/freeform-input.esm.js",
  "typings": "dist/index.d.ts",
  "repository": "github:PsychoLlama/freeform-input",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint src",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint src"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "jest": {
    "setupFiles": [
      "./src/setupTests.tsx"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/Input.tsx"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "functions": 100,
        "branches": 100,
        "lines": 100
      }
    }
  },
  "eslintConfig": {
    "rules": {
      "@typescript-eslint/no-use-before-define": "off"
    }
  },
  "author": "Jesse Gibson <JesseTheGibson@gmail.com>",
  "size-limit": [
    {
      "path": "dist/freeform-input.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/freeform-input.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.9.1",
    "@types/enzyme": "^3.10.8",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.5",
    "husky": "^4.3.7",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "size-limit": "^4.9.1",
    "tsdx": "^0.14.1",
    "tslib": "^2.1.0",
    "typescript": "^4.1.5"
  }
}
